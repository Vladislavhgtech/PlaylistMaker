<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_16dp"
    android:paddingRight="@dimen/padding_16dp"
    android:paddingBottom="@dimen/padding_28dp"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14dp"
        android:fontFamily="sans-serif"
        android:text="@string/playlist_maker"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/searchButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:layout_weight="1"
        android:text="@string/button_search"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/text_size_title"
        app:iconSize="@dimen/icon_size_32dp"
        android:padding="@dimen/padding_0dp"
        android:textColor="@color/buttonTextColor"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/padding_16dp"
        app:icon="@drawable/search"
        app:iconGravity="textStart"
        app:iconTint="@color/buttonTextColor"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mediaButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:layout_weight="1"
        android:text="@string/button_library"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/text_size_title"
        app:iconSize="@dimen/icon_size_32dp"
        android:padding="@dimen/padding_0dp"
        android:textColor="@color/buttonTextColor"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/padding_16dp"
        app:icon="@drawable/media_library"
        app:iconGravity="textStart"
        app:iconTint="@color/buttonTextColor"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsButton"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_0dp"
        android:layout_marginTop="@dimen/margin_14dp"
        android:layout_weight="1"
        android:text="@string/settings"
        android:fontFamily="sans-serif"
        android:textSize="@dimen/text_size_title"
        app:iconSize="@dimen/icon_size_32dp"
        android:padding="@dimen/padding_0dp"
        android:textColor="@color/buttonTextColor"
        android:backgroundTint="@color/white"
        app:cornerRadius="@dimen/padding_16dp"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconTint="@color/buttonTextColor"/>
</LinearLayout>