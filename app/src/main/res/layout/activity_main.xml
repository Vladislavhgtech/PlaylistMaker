<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:orientation="vertical"
    android:paddingLeft="@dimen/padding_16dp"
    android:paddingRight="@dimen/padding_16dp"
    android:paddingBottom="@dimen/padding_28dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_14dp"
        android:fontFamily="@font/ys_display_regular"
        android:text="@string/playlist_maker"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_22sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/searchButton"
        style="@style/BaseMaterialButtonStyle"
        android:text="@string/button_search"
        app:icon="@drawable/search"
        app:iconSize="@dimen/icon_size_32dp"
        app:cornerRadius="@dimen/padding_16dp"
        app:iconGravity="textStart"
        app:iconTint="@color/buttonTextColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/mediaButton"
        style="@style/BaseMaterialButtonStyle"
        android:text="@string/button_library"
        app:icon="@drawable/media_library"
        app:iconSize="@dimen/icon_size_32dp"
        app:cornerRadius="@dimen/padding_16dp"
        app:iconGravity="textStart"
        app:iconTint="@color/buttonTextColor" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/settingsButton"
        style="@style/BaseMaterialButtonStyle"
        android:text="@string/settings"
        app:icon="@drawable/settings"
        app:iconSize="@dimen/icon_size_32dp"
        app:cornerRadius="@dimen/padding_16dp"
        app:iconGravity="textStart"
        app:iconTint="@color/buttonTextColor" />
</LinearLayout>