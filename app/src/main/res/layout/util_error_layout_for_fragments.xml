<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp160"
        android:layout_weight="0"
        android:orientation="vertical">


        <Button
            android:id="@+id/retry_button"
            style="@style/ErrorButtons"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp36"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp16"
            android:layout_marginBottom="@dimen/dp24"
            android:paddingStart="@dimen/dp16"
            android:paddingTop="@dimen/dp8"
            android:paddingEnd="@dimen/dp16"
            android:paddingBottom="@dimen/dp8"
            android:text="@string/new_play_list" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp24" />

    </LinearLayout>

    <ImageView
        android:id="@+id/error_icon"
        style="@style/ErrorTransparent"
        android:layout_width="@dimen/dp120"
        android:layout_height="@dimen/dp120"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/ic_error_notfound" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp12" />

    <TextView
        android:id="@+id/error_text_web"
        style="@style/ErrorTextBig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center"
        android:text="@string/any_mistake"
        android:textSize="@dimen/text_size_sp16" />

</LinearLayout>

