<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseSettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="iconGravity">end</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingVertical">@dimen/padding_20dp</item>
        <item name="android:paddingHorizontal">@dimen/padding_16dp</item>
    </style>


    <style name="SettingsBtn" parent="BaseSettingsButtonStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/toolbar_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/settings_icon_color</item>
    </style>

    <style name="BaseMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:padding">@dimen/padding_0dp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="elevation">0dp</item>
    </style>




</resources>