<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="BaseSettingsButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">start</item>
        <item name="iconGravity">end</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingVertical">@dimen/padding_20dp</item>
        <item name="android:paddingHorizontal">@dimen/padding_16dp</item>
    </style>


    <style name="SettingsBtn" parent="BaseSettingsButtonStyle">
        <item name="android:textSize">@dimen/text_size_16sp</item>
        <item name="android:textColor">@color/toolbar_color</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:letterSpacing">0</item>
        <item name="iconTint">@color/settings_icon_color</item>
        <item name="android:backgroundTint">@color/setButtonColor</item>
    </style>

    <style name="BaseMaterialButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/padding_0dp</item>
        <item name="android:layout_marginTop">@dimen/margin_14dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:padding">@dimen/padding_0dp</item>
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="MainScreenButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item> <!-- Делим высоту на 3 -->
        <item name="android:layout_marginTop">@dimen/margin_14dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">22sp</item> <!-- Размер текста 22 -->
        <item name="android:textColor">@color/buttonTextColor</item>
        <item name="android:textAllCaps">false</item> <!-- Только первая буква заглавная -->
        <item name="android:paddingVertical">16dp</item>
        <item name="android:paddingHorizontal">16dp</item>
        <item name="android:backgroundTint">@color/buttonColor</item>
        <item name="elevation">0dp</item>
        <item name="cornerRadius">16dp</item>
    </style>

    <style name="ErrorTextPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="iconTint">@color/text_color_primary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">400</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/text_color_primary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>

    <style name="ErrorButtonPlaceholder">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="iconTint">@color/text_color_primary</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAlignment">center</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:padding">15dp</item>
        <item name="android:backgroundTint">@color/button_background_color</item>
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">54dp</item>
    </style>



    <style name="TextMedium14BaseStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
        <item name="android:lineHeight">16.41sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:letterSpacing">@dimen/letter_spacing</item>
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BtnSearchScreenStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="cornerRadius">@dimen/corner_radius_54</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:gravity">center</item>
        <item name="android:textAppearance">@style/TextMedium14BaseStyle</item>
    </style>

    <style name="BtnSearchScreenColorStyle" parent="BtnSearchScreenStyle">
        <item name="android:backgroundTint">#1A1B22</item>
        <item name="android:textColor">#1A1B22</item>
    </style>





</resources>